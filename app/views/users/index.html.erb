<h1>welcome!</h1>

<% if logged_in? %>
	<p>Signed in as: <%= @user.username %></p>
	<%= button_to "logout", session_path(@user.id), method: :delete %>
<% else %>

	<%= link_to "signup", new_user_path %><br/><br/>

	<% if flash[:notice] %>
	  <p><%= flash[:notice] %></p>
	<% end %>

	<%= form_for @user, url: sessions_path do |f| %>
		username: <%= f.text_field :username %><br/>
		password: <%= f.password_field :password %><br/>
		<%= f.submit "login" %>
	<% end %>

<% end %>